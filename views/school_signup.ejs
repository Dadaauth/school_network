<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>School Network</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <section id="c-is-sticky"></section>
        <nav class="header-nav">
            <h3 id="brand-name">School Network</h3>
            <span id="menu-toggle"><i class="bi bi-list"></i></span>
            <ul id="header-nav-ul">
                    <li id="header-nav-ul-li">Get Started</li>
                    <li id="header-nav-ul-li">Contribute</li>
                    <li id="header-nav-ul-li">Sign in</li>
                    <li id="header-nav-ul-li">Sign up</li>
            </ul>
        </nav>
        <div id="sign_up_form" class="nothing">
            <form action="/school_signup" method="post">
                <p>Please Register As The Admin Of Your School</p>
                <div id="form-1">
                    <h4>School Information</h4>
                    <label for="school_name">School Name<span style="color:red;">*</span></label>
                    <input type="text" class="tp-style" name="school_name" id="school_name" placeholder="Your School Name">
                    <label for="school_username">School Username<span style="color:red;">*</span></label>
                    <input type="text" class="tp-style" name="school_username" id="school_username" placeholder="Your School Username">
                    <label for="school_desc_motto">School Description || Motto<span style="color:red;">*</span></label>
                    <input type="text" class="tp-style" name="school_desc_motto" id="school_desc_motto" placeholder="Your School Description Or Motto">
                    <div class="file-contain">
                        <label for="school_logo">School Logo<span style="color:red;">*</span></br>
                            <i class="bi bi-camera-fill"></i>
                            <input type="file" accept="image/png, image/jpg, image/gif, image/jpeg" name="school_logo" id="school_logo" class="file"><br/>
                            <span id="file-name" style="color: green;"></span>
                        </label>
                    </div>
                </div>
                <div id="form-2">
                    <h4>Admin Information</h4>
                    <label for="admin_name">Admin Name<span style="color:red;">*</span></label>
                    <input type="text" class="tp-style" name="admin_name" id="admin_name" placeholder="Admin Name || Your Name">
                    <label for="password">Password<span style="color:red;">*</span></label>
                    <input type="password" class="tp-style" name="password" id="password" placeholder="Your Password">
                    <div class="file-contain">
                        <label for="profile_picture">Your Picture<span style="color:red;">*</span></br>
                            <i class="bi bi-camera-fill"></i>
                            <input type="file" accept="image/png, image/jpg, image/gif, image/jpeg" name="profile_picture" id="profile_picture" class="file"><br/>
                            <span id="file-name2" style="color: green;"></span>
                        </label>
                    </div>
                </div>
                <div id="signup-form-submit-btn">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
        <script>
            try{
                var menuToggle = document.getElementById("menu-toggle");
                var menuShow = document.getElementById("header-nav-ul");
                function displayToggle(displayedItem, style) {
                    return displayedItem.style.display = `${style}`;
                }
                menuToggle.addEventListener("click", () => {
                    if(menuShow.style.display === "none"){
                        displayToggle(menuShow, "block")
                    }else if(menuShow.style.display === "block"){
                        displayToggle(menuShow, "none")
                    }
                });
            }
            catch(err){
                alert(err);
            }


            try{
                const stickyElm = document.querySelector("nav");
                const observer = new IntersectionObserver(
                    ([e]) => e.target.classList.toggle('isSticky', e.intersectionRatio < 1),
                    {threshold: [1]}                
                );
                observer.observe(stickyElm);
            }
            catch(err){

            }

            // for school logo file input design
            try{
                function inputSChLogo(){
                    let input = document.getElementById("school_logo");
                    let fileName = document.getElementById("file-name");

                    input.addEventListener("change", ()=>{
                        let inputImage = document.querySelectorAll("input[type=file]")[0].files[0];

                        fileName.innerText = inputImage.name;
                    });
                }
                inputSChLogo();

                // for admin profile picture file input design
                function inputAdminProf(){
                    const input2 = document.getElementById("profile_picture");
                    const fileName2 = document.getElementById("file-name2");

                    input2.addEventListener("change", ()=>{
                        let inputImage = document.querySelectorAll("input[type=file]")[1].files[0];

                        fileName2.innerText = inputImage.name;
                    });
                }
                inputAdminProf();
            }
            catch(err){

            }
            
        </script>
        <script src="" async defer></script>
    </body>
</html>